@model WebGesCommande.Models.User

@{
    ViewData["Title"] = "Inscription";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>

<body class="min-h-screen bg-gradient-to-br from-purple-50 to-blue-50">
    <div class="min-h-screen flex items-center justify-center p-4">
    <!-- Augmenter la largeur -->
    <div class="animate-fade-in w-full max-w-2xl">
        <div class="bg-white/90 backdrop-blur-xl rounded-2xl shadow-xl border border-purple-100 p-8">
            <!-- En-tête avec plus d'espace -->
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent">
                    Créer un compte
                </h1>
                <p class="text-gray-500 mt-2">Rejoignez-nous dès maintenant</p>
            </div>

            <form asp-action="Create" method="post" class="space-y-6">
                <!-- Nom et Prénom sur la même ligne -->
                <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-2">
                        <label class="text-sm font-medium text-gray-700 flex items-center gap-2" asp-for="Nom">
                            <i class="fas fa-user text-purple-500"></i>Nom
                        </label>
                        <input type="text" name="nom" required asp-for="Nom"
                               class="w-full px-4 py-3 rounded-xl border border-gray-200 
                                      focus:border-purple-500 focus:ring-2 focus:ring-purple-200 
                                      transition-all duration-300"
                               placeholder="Votre nom">
                    </div>
                    <div class="space-y-2">
                        <label class="text-sm font-medium text-gray-700 flex items-center gap-2" asp-for="Prenom">
                            <i class="fas fa-user text-purple-500"></i>Prénom
                        </label>
                        <input type="text" name="prenom" required asp-for="Prenom"
                               class="w-full px-4 py-3 rounded-xl border border-gray-200 
                                      focus:border-purple-500 focus:ring-2 focus:ring-purple-200 
                                      transition-all duration-300"
                               placeholder="Votre prénom">
                    </div>
                </div>

                <!-- Téléphone -->
                <div class="space-y-2">
                    <label class="text-sm font-medium text-gray-700 flex items-center gap-2">
                        <i class="fas fa-phone text-purple-500"></i>Téléphone
                    </label>
                    <input type="tel" name="telephone" required asp-for="Telephone"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 
                                  focus:border-purple-500 focus:ring-2 focus:ring-purple-200 
                                  transition-all duration-300"
                           placeholder="Ex: 77 123 45 67">
                </div>

                <!-- Adresse simplifiée -->
                <div class="space-y-2">
                    <label class="text-sm font-medium text-gray-700 flex items-center gap-2">
                        <i class="fas fa-map-marker-alt text-purple-500"></i>Adresse
                    </label>
                    <input type="text" name="address" required asp-formaction="Address"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 
                                  focus:border-purple-500 focus:ring-2 focus:ring-purple-200 
                                  transition-all duration-300"
                           placeholder="Votre adresse complète">
                </div>

                <!-- Email -->
                <div class="space-y-2">
                    <label class="text-sm font-medium text-gray-700 flex items-center gap-2" asp-for="login">
                        <i class="fas fa-envelope text-purple-500"></i>Email
                    </label>
                    <input type="email" name="login" required asp-for="login"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 
                                  focus:border-purple-500 focus:ring-2 focus:ring-purple-200 
                                  transition-all duration-300"
                           placeholder="exemple@email.com">
                </div>

                <!-- Mot de passe -->
                <div class="space-y-2">
                    <label class="text-sm font-medium text-gray-700 flex items-center gap-2" asp-for="Password">
                        <i class="fas fa-lock text-purple-500"></i>Mot de passe
                    </label>
                    <input type="password" name="password" required asp-for="Password"
                           class="w-full px-4 py-3 rounded-xl border border-gray-200 
                                  focus:border-purple-500 focus:ring-2 focus:ring-purple-200 
                                  transition-all duration-300"
                           placeholder="••••••••">
                </div>

                <!-- Bouton d'inscription amélioré -->
                <button type="submit" 
                        class="w-full py-4 px-6 text-white font-medium text-lg
                               bg-gradient-to-r from-purple-500 to-purple-700
                               rounded-xl shadow-lg hover:shadow-purple-500/25 
                               transform hover:-translate-y-0.5 transition-all duration-300
                               flex items-center justify-center gap-3">
                    <i class="fas fa-user-plus"></i>
                    S'inscrire
                </button>
            </form>

            <!-- Lien retour connexion -->
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Déjà inscrit ?
                    <a asp-action="Connexion" 
                       class="text-purple-600 font-medium hover:text-purple-700 
                              hover:underline transition-colors">
                        Se connecter
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

    <style>
        .animate-fade-in {
            animation: fadeIn 0.5s ease-out;
        }
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</body>
</html>
